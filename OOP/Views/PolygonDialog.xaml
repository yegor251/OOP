<Window x:Class="OOP.Views.PolygonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите количество сторон" Height="150" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Количество сторон:"/>
        <TextBox x:Name="SidesTextBox" Width="100"/>
        <Button Content="OK" Click="OKButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>